<svg width="1200" height="630" viewBox="0 0 1200 630" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="socialCardGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0a0f1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a2332;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#007bff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#00d4ff;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="1200" height="630" fill="url(#socialCardGradient)" />

  <!-- Decorative elements -->
  <circle cx="100" cy="100" r="200" fill="url(#textGradient)" opacity="0.1" />
  <circle cx="1100" cy="500" r="150" fill="url(#textGradient)" opacity="0.1" />
  
  <!-- Robot icon -->
  <g transform="translate(550, 250)">
    <!-- Robot head -->
    <rect x="-50" y="-60" width="100" height="120" rx="20" fill="url(#textGradient)" />
    <!-- Eyes -->
    <circle cx="-20" cy="-20" r="10" fill="#ffffff" />
    <circle cx="20" cy="-20" r="10" fill="#ffffff" />
    <!-- Mouth -->
    <rect x="-25" y="20" width="50" height="8" rx="4" fill="#ffffff" />
    <!-- Body -->
    <rect x="-35" y="60" width="70" height="100" rx="15" fill="url(#textGradient)" opacity="0.8" />
    <!-- Arms -->
    <rect x="-80" y="70" width="45" height="12" rx="6" fill="url(#textGradient)" opacity="0.8" />
    <rect x="35" y="70" width="45" height="12" rx="6" fill="url(#textGradient)" opacity="0.8" />
    <!-- Legs -->
    <rect x="-25" y="160" width="15" height="50" rx="7" fill="url(#textGradient)" opacity="0.8" />
    <rect x="10" y="160" width="15" height="50" rx="7" fill="url(#textGradient)" opacity="0.8" />
  </g>

  <!-- Title text -->
  <text x="600" y="150" font-family="Arial, sans-serif" font-size="48" font-weight="bold" text-anchor="middle" fill="url(#textGradient)">
    Physical AI &amp; Humanoid Robotics
  </text>

  <!-- Subtitle -->
  <text x="600" y="190" font-family="Arial, sans-serif" font-size="24" text-anchor="middle" fill="#ffffff">
    Your comprehensive guide to embodied intelligence
  </text>

  <!-- Tag -->
  <rect x="900" y="500" width="220" height="50" rx="25" fill="url(#textGradient)" />
  <text x="1010" y="535" font-family="Arial, sans-serif" font-size="20" text-anchor="middle" fill="#ffffff" font-weight="bold">
    TEXTBOOK
  </text>
</svg>